#video(ng-show="vm.TvonlineWrapper.video")
  iframe(ng-src="{{ vm.$sce.trustAsResourceUrl(vm.TvonlineWrapper.video.url) }}")

.ui.segment#subtitles-wrap(ng-show="vm.TvonlineWrapper.video && vm.Globals.subtitlesMode && (vm.SpringfieldWrapper.episode.subtitles || vm.SpringfieldWrapper.episode.subtitlesTracker.active())",
                        ng-style="{left: vm.Globals.subtitlesCssLeft + '%'}")
  #auto-scroller(ng-mousemove="vm.moveScroller($event)" ng-mouseleave="vm.stopScroller()")
  .ui.centered.inline.loader.active(ng-show="vm.SpringfieldWrapper.episode.subtitlesTracker.active()")
  #subtitles-scroll-wrap
    #subtitles(ng-bind-html="vm.$sce.trustAsHtml(vm.SpringfieldWrapper.episode.subtitles)")
