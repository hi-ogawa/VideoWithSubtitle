.div-header
  .para
    %button{:onclick => "toggleShowHideMenu()"} show/hide menu
  .para
    %a{:id => "para_title_springfield"} title in springfield
  .para
    %a{:id => "para_title_tvonline"} title in tvlinline
  .para
    %a#surl{:href => @scripts_url} sciprts url 
  .para
    %a#vurl{:href => @tvonline_url} tvonline url
  .para
    %span
      index: #{@index}
  .para
    %a#eurl{:href => @video_url} embed video url


.div-video
  %iframe#video{:scrolling => "no", :src => "#{@video_url}"}

.div-alc
  %iframe#alc{:scrolling => "yes"}

.div-scripts
  .div-scripts-wrap
    %p 
  #nwgrip-drag
  #segrip.ui-resizable-handle.ui-resizable-se


.div-dictionary
  .div-dictionary-wrap
  #nwgrip-drag
  #segrip.ui-resizable-handle.ui-resizable-se


.div-form


  .div-search
    %p search for titles
    %input#title_inquiry
    %br
    
    %button#search_button{:onclick => "searchTitles()"} search!!

    %p titles in tvonline
    %select#video_titles{:name => "video_titles"}
      %option{:value => @video_titles}
        = @video_titles
    %br

    %p titles in springfield
    %select#scripts_titles{:name => "scripts_titles"}
      %option{:value => @scripts_titles}
        = @scripts_titles
    %br

    %br

    %p season number
    %input#season
    %br

    %p episode number
    %input#episode
    %br

    %button#update2_button{:onclick => "update2()"} watch!
    %br

  %br

  %p specify urls directly

  %a{:href => "http://www.tvonline.tw/"} tvonline url
  %br
  %input#tvonline_url
  %br

  %p index of the video
  %input#index
  %br

  %a{:href => "http://www.springfieldspringfield.co.uk"} scripts url
  %br
  %input#scripts_url
  %br

  %button#update1_button{:onclick => "update1()"} watch!

