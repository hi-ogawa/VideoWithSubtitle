<style>
  div{
  font-family: Sans-Serif;
  }
  .div-video{
  margin-left: auto;
  margin-right: auto;
  width: 75%;
  }
  #video {
  position: relative;
  width: 100%;
  height: 95vh;
  overflow: hidden;
  border: 0px;
  }

  .div-scripts {
  font-size: 18px;
  position: absolute;
  top: 10px; left: 180px;
  width: 30%;
  height: 100px;
  overflow: scroll;
  z-index: 1;
  background-color: #ffffff;
  opacity: 0.7;
  filter:alpha(opacity=60); /* For IE8 and earlier */
  }

  .div-scripts p{
  margin: 4px;
  color: #000000;
  }

  .div-form{
  font-size: 16px;
  position: absolute;
  width: 150px;
  height: 100px;
  top: 10px;
  left: 10px;
  }
