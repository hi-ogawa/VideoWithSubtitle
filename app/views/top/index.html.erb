<style>
  div{
  font-family: Sans-Serif;
  }
  .div-video{
  margin-left: auto;
  margin-right: auto;
  width: 75%;
  }

  #video {
  position: relative;
  width: 100%;
  height: 95vh;
  overflow: hidden;
  border: 0px;
  }

  .div-scripts {
  font-size: 16px;
  position: absolute;
  top: 10px; left: 180px;
  width: 30%;
  height: 100px;
  z-index: 1;
  background-color: #ffffff;
  opacity: 0.65;
  filter:alpha(opacity=60); /* For IE8 and earlier */
  }

  .div-scripts-wrap {
  height: 100px;
  overflow: scroll;
  overflow-x:hidden;
  }

  .div-scripts p{
  margin: 10px;
  color: #000000;
  }

  .div-form{
  font-size: 13px;
  position: absolute;
  width: 17%
  height: 100px;
  top: 10px;
  left: 10px;
  }

  #nwgrip, #negrip, #swgrip, #segrip, #ngrip, #egrip, #sgrip, #wgrip {
      width: 12px;
      height: 12px;
      background-color: #ffffff;
      border: 1px solid #000000;
  }
  #segrip {
      right: -5px;
      bottom: -5px;
  }
  .ui-resizable-helper { border: 2px dotted #00F; }
</style>


<div class="div-video">
<iframe id="video" src="<%= @video_url %>" scrolling="no"></iframe>
</div>


<div class="div-scripts">
 <div class="div-scripts-wrap">
  <p class="p-scripts" > <%== @scripts_text %> </p>
 </div>
 <div class="ui-resizable-handle ui-resizable-nw" id="nwgrip"></div>
 <div class="ui-resizable-handle ui-resizable-ne" id="negrip"></div>
 <div class="ui-resizable-handle ui-resizable-sw" id="swgrip"></div>
 <div class="ui-resizable-handle ui-resizable-se" id="segrip"></div>
</div>


<div class="div-form">

  <p> modern family </p>
  <%= form_tag({controller: "top", action: "index"}, method: "get") do %> 
    <%= label_tag(:season, "season number") %>  <br>
    <%= text_field_tag(:season) %> <br>
    <%= label_tag(:espisode, "episode number") %>  <br>
    <%= text_field_tag(:episode) %> <br>
    <%= submit_tag "go1" %>
  <% end %>

  <br>

  <p> specify urls directly </p>
  <%= form_tag({controller: "top", action: "index"}, method: "get") do %> 
    <a href="http://www.tvonline.tw/"> tvonline url </a> <br>
    <%= text_field_tag(:tvonline_url) %> <br>
    <span> index of the video </span> <br>
    <%= text_field_tag(:index) %> <br>
    <!-- <%= label_tag(:video_url, "video url") %> <%= text_field_tag(:video_url) %> <br> -->
    <a href="http://www.springfieldspringfield.co.uk"> scripts url </a> <br>
    <%= text_field_tag(:scripts_url) %> <br>
    <%= submit_tag "go2" %>
  <% end %>

