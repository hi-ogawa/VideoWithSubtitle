<div class="div-video">
<iframe id="video" src="<%= @video_url %>" scrolling="no"></iframe>
</div>


<div class="div-scripts">
<p class="p-scripts" > <%== @scripts_text %> </p>
</div>

<div class="div-form">

  <p> modern family </p>
  <%= form_tag({controller: "top", action: "index"}, method: "get") do %> 
    <%= label_tag(:season, "season number") %>  <%= text_field_tag(:season) %> <br>
    <%= label_tag(:espisode, "episode number") %> <%= text_field_tag(:episode) %> <br>
    <%= submit_tag "go1" %>
  <% end %>

  <br>

  <p> specify urls directly </p>
  <%= form_tag({controller: "top", action: "index"}, method: "get") do %> 
    <a href="http://www.tvonline.tw/"> tvonline url </a>
    <%= text_field_tag(:tvonline_url) %> <br>
    <!-- <%= label_tag(:video_url, "video url") %> <%= text_field_tag(:video_url) %> <br> -->
    <a href="http://www.springfieldspringfield.co.uk"> scripts url </a>
    <%= text_field_tag(:scripts_url) %> <br>
    <%= submit_tag "go2" %>
  <% end %>

